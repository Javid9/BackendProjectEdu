@model  IEnumerable<UpComingEvent>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Events Table</h4>
               
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Day
                                </th>
                                <th>
                                    Month
                                </th>
                                <th>
                                    Startime
                                </th>
                                <th>
                                    Endtime
                                </th>
                                <th>
                                    Location
                                </th>
                                <th>
                                    Speaker
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(UpComingEvent item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/img/event/@item.Image" style="width:200px;height:150px" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Day
                                </td>
                                <td>
                                    @item.Month
                                </td>
                                <td>
                                    @item.StartTime
                                </td>
                                <td>
                                    @item.EndTime
                                </td>
                                <td>
                                    @item.Location
                                </td>
                                <td>
                                    @foreach (var speakerEvent in item.SpeakerEvents)
                                    {
                                        @speakerEvent.Speaker.Name <span>,</span>

                                    }
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


